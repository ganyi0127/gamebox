/* pages/message/message.wxss */

page {
  background-color: #f1f1f1;
}

.card {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin: 60rpx 20rpx;
  padding: 20rpx 30rpx;
  border-radius: 15rpx;
  border: 1rpx solid #ddd;
}

.card-title {
  font-size: 20px;
  margin-bottom: 20rpx;
}

.card-date {
  /* position: fixed; */
  right: 40rpx;
  font-size: 14px;
  color: #ccc;
  margin-bottom: 0rpx;
  padding-bottom: 0rpx;
  /* border-bottom: 1rpx solid #ddd; */
}

.card-img {
  height: 400rpx;
  width: 100%;
}

.card-desc {
  font-size: 16px;
  color: #333;
  margin-bottom: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-top: 1rpx solid #ddd;
}

.card-dot {
  position: fixed;
  width: 16rpx;
  height: 16rpx;
  /* right: 40rpx;
  top: 100rpx; */
  border-radius: 50%;
  background-color: red;
}

.card-read {
  font-size: 14px;
  color: #666;
}

/* 伪元素：画上去的箭头 */

.arrow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow::after {
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}
